@import "../../../../constants.wxss";

.lang-picker {
    position: absolute;
    top: 10000px;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    &.show {
        top: 0;
    }
}

.lang-picker .picker-wrapper {
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    background: #fff;
    opacity: 0;
    transform: translate(0, 200px);

    .button-bar {
        width: 100%;
        height: 80rpx;
        display: flex;
        background: #fafafa;
        border-bottom: 0.5rpx solid #e4e4e4;
    }

    .button-bar .btn {
        flex: 1;
        height: 100%;
        padding: 0;
        border: 0;
        line-height: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0;
        background: transparent;
    }

    .button-bar .btn.button-hover:after {
        opacity: 0.3;
    }

    .button-bar .btn text {
        line-height: 1;
        font-size: 28rpx;
    }

    .button-bar .btn:after {
        opacity: 0;
        border-radius: 0;
        border: none;
        transition: opacity ease .2s;
    }

    .button-bar .btn.cancel-btn {
        color: #555;
        &:after {
            background: #888;
        }
    }

    .button-bar .btn.ok-btn {
        color: @MAIN_COLOR;
        &:after {
            background: @MAIN_COLOR;
        }
    }

    picker-view {
        width: 100%;
        height: 300rpx;
        background: #fff;
    }
}


.lang-picker .picker-item {
    text-align: center;
    line-height: 34px;
    font-size: 30rpx;
}
